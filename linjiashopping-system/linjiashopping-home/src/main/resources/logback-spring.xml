<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <!-- 上下文名称 -->
    <contextName>linjiashopping</contextName>

    <!-- 定义字符集属性 -->
    <property name="CHARSET" value="UTF-8"/>
    <!-- 定义文件路径属性（使用spring boot已经定义的环境变量） -->
    <property name="FILE_PATH" value="${LOG_PATH}"/>
    <!-- 定义控制台日志格式属性 -->
    <property name="CONSOLE_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%clr(%-5p)] [%clr(%logger{15}){cyan}]: %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
    <!-- 定义文件日志格式属性 -->
    <property name="FILE_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%t] [%-5p] [%logger{15}]: %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <!-- 彩色日志渲染引擎 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex"
                    converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx"
                    converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <!-- 控制台输出 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <!-- BIZ层文件输出 -->
    <appender name="biz" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_PATH}/biz.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}/%d{yyyy-MM-dd}/biz.%i.log</fileNamePattern>
            <!-- 按时间回滚的同时，按文件大小来回滚 -->
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- 保留最近30天日志 -->
            <maxHistory>30</maxHistory>
            <!-- 日志文件上限，达到该值会删除旧日志 -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <!-- WEB层文件输出 -->
    <appender name="web" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_PATH}/web.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}/%d{yyyy-MM-dd}/web.%i.log</fileNamePattern>
            <!-- 按时间回滚的同时，按文件大小来回滚 -->
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- 保留最近30天日志 -->
            <maxHistory>30</maxHistory>
            <!-- 日志文件上限，达到该值会删除旧日志 -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <!-- DAL层文件输出 -->
    <appender name="dal" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_PATH}/dal.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}/%d{yyyy-MM-dd}/dal.%i.log</fileNamePattern>
            <!-- 按时间回滚的同时，按文件大小来回滚 -->
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- 保留最近30天日志 -->
            <maxHistory>30</maxHistory>
            <!-- 日志文件上限，达到该值会删除旧日志 -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <!-- 错误日志 -->
    <appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_PATH}/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}/%d{yyyy-MM-dd}/error.%i.log</fileNamePattern>
            <!-- 按时间回滚的同时，按文件大小来回滚 -->
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- 保留最近30天日志 -->
            <maxHistory>30</maxHistory>
            <!-- 日志文件上限，达到该值会删除旧日志 -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>




    <!-- 设置第三方包日志级别 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.mybatis" level="WARN"/>
    <logger name="org.apache.ibatis" level="WARN"/>
    <logger name="springfox" level="WARN"/>
    <logger name="org.apache.commons" level="WARN"/>
    <logger name="org.apache.http" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="org.redisson" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="tk" level="WARN"/>
    <logger name="org.apache.cxf" level="WARN"/>

    <!-- biz层 -->
    <logger name="com.zkz.home.service" level="INFO" addtivity="false">
        <appender-ref ref="biz"/>
    </logger>

    <!-- web层 -->
    <logger name="com.zkz.home.controller" level="INFO" addtivity="false">
        <appender-ref ref="web"/>
    </logger>



    <springProfile name="dev,test">
        <!-- 数据访问会话事务等信息 -->
        <logger name="org.mybatis.spring.SqlSessionUtils" level="DEBUG" addtivity="false">
            <appender-ref ref="dal"/>
        </logger>

        <!-- 数据访问层 -->
        <logger name="com.zkz.home.dao" level="DEBUG" addtivity="false">
            <appender-ref ref="dal"/>
        </logger>

        <root level="DEBUG">
            <appender-ref ref="console"/>
            <appender-ref ref="error"/>
        </root>
    </springProfile>


</configuration>